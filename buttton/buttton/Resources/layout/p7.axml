<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:padding="10dp"
	android:gravity="center">

	<TextView
	android:id="@+id/form"
	 android:layout_width="match_parent"
	 android:layout_height="wrap_content"
	android:text="Registration Form"
	android:textAlignment="center"
	android:textSize="20sp"
	android:textStyle="bold"	
	android:textColor="#000"/>
	<RelativeLayout
		android:id="@+id/layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/form"
		android:background="#0f0"
		android:padding="30dp"
		android:layout_marginTop="50dp">
		<TextView
			android:id="@+id/firstName"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:text="First Name"
			android:textSize="20dp"/>
		<EditText
			android:id="@+id/editfname"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/firstName"
			android:background="#ffbb33"/>
		<TextView
			android:id="@+id/textviewMiddleName"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:text="Middle Name"
			androis:marginTop="20dp"
			android:layout_below="@+id/editfname"
			android:textSize="20dp"/>
		<EditText
			android:id="@+id/editmname"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:layout_toRightOf="@id/textviewMiddleName"
			android:layout_below="@id/editfname"
			android:background="#ffbb33"/>
		<TextView
			android:id="@+id/lastname"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:text="Last name"
			android:layout_below="@id/textviewMiddleName"
			android:textSize="20dp"/>
		<EditText
			android:id="@+id/editlname"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/firstName"
			android:layout_below="@id/editmname"
			android:layout_marginTop="5dp"
			android:background="#ffbb33"/>
		<TextView
			android:id="@+id/email"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:text="EmailID"
			android:layout_below="@+id/lastName"
			android:textSize="20dp"/>
		<EditText
			android:id="@+id/editemail"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/firstName"
			android:layout_below="@id/editlname"
			android:layout_marginTop="5dp"
			android:background="#ffbb33"/>
		<TextView
			android:id="@+id/address"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:text="Address"
			android:layout_below="@+id/email"
			android:textSize="20dp"/>
		<EditText
			android:id="@+id/editaddres"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/firstName"
			android:layout_below="@id/editemail"
			android:layout_marginTop="5dp"
			android:background="#ffbb33"/>
	</RelativeLayout>

	<Button
		android:id="@+id/btn_register"
	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:text="Register"
	android:layout_below="@+id/layout"
	android:layout_marginTop="20dp"
	android:layout_marginLeft="30dp"
	android:textSize="20sp"
	android:background="#f00"
	android:textAllCaps="false"
	android:textAlignment="center"/>

		<Button
		android:id="@+id/btn_cancel"
	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:text="Cancel"
	android:layout_toRightOf="@+id/btn_register"
	android:layout_alignTop="@+id/btn_register"
	android:layout_marginLeft="20dp"
	android:textSize="20sp"
	android:background="#f00"
	android:textAllCaps="false"
	android:textAlignment="center"/>

</RelativeLayout>
